{
  "name": "timeline-writer",
  "version": "0.1.0",
  "description": "Temporal versioning for fiction writers with intelligent context detection",
  "main": "main.js",
  "scripts": {
    "build:production": "node esbuild.config.mjs --production",
    "copy-manifest": "tsx copy-manifest.ts",
    "copy-wasm": "tsx copy-wasm.ts",
    "build": "npm run build:production && npm run copy-manifest && npm run copy-wasm",
    "dev": "node esbuild.config.mjs --watch",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src",
    "format:fix": "biome format src --write",
    "check": "biome check src",
    "check:fix": "biome check src --write",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "validate": "npm run type-check && npm run check && npm run build && npm test",
    "prepare": "husky",
    "pre-commit": "npm run type-check && npm run check && npm run build && npm test"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "versioning",
    "fiction",
    "writing",
    "timeline",
    "context-detection"
  ],
  "author": "Timeline Writer Team",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/diff-match-patch": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.6.3",
    "@types/pako": "^2.0.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/sql.js": "^1.4.9",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.4",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "obsidian": "^1.4.16",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "ml-matrix": "^6.10.4",
    "natural": "^6.0.0",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.8.0",
    "tslib": "^2.8.1",
    "vis-timeline": "^7.7.3"
  }
}
